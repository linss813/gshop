<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.linss.gshop.mapper.AdminUserMapper">

    <select id="findByUsername" resultType="com.linss.gshop.entity.AdminUser">
        SELECT * FROM admin WHERE username = #{username}
    </select>

    <select id="findById" resultType="com.linss.gshop.entity.AdminUser">
        SELECT * FROM admin WHERE id = #{id}
    </select>

    <insert id="save" parameterType="com.linss.gshop.entity.AdminUser">
        INSERT INTO admin (username, password, create_at, last_login, user, type)
        VALUES (#{username}, #{password}, NOW(), NOW(), #{user}, #{type})
    </insert>

    <update id="update" parameterType="com.linss.gshop.entity.AdminUser">
        UPDATE admin
        SET username = #{username},
            password = #{password},
            last_login = NOW(),
            user = #{user},
            type = #{type}
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="int">
        DELETE FROM admin WHERE id = #{id}
    </delete>

    <select id="findAll" resultType="com.linss.gshop.entity.AdminUser">
        SELECT * FROM admin
    </select>

</mapper>
